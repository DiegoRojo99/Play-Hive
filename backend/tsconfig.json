{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/routes/authRoutes.js"],
  "exclude": ["node_modules"]
}