datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  appid               Int         @id
  name                String
  description         String?  
  shortDescription    String? 
  languages           String?  
  headerImage         String?  
  capsuleImage        String?
  releaseDate         DateTime? 
  backgroundImage     String? 
  genres              Genre[]     @relation("GameGenres")
}

model Genre {
  id                  Int         @id
  description         String
  games               Game[]      @relation("GameGenres")
}