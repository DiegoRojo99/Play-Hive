datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_DATABASE_URL")
  directUrl = env("SUPABASE_DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  appid               Int         @id
  name                String
  description         String?  
  shortDescription    String? 
  languages           String?  
  headerImage         String?  
  capsuleImage        String?
  releaseDate         DateTime? 
  backgroundImage     String? 
  genres              Genre[]     @relation("GameGenres")
}

model Genre {
  id                  Int         @id
  description         String
  games               Game[]      @relation("GameGenres")
}

model Profile {
  userId      String      @id
  steamId     String?
  avatarUrl   String?
}